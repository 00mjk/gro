include gro

data := {};
mode := 0;
FILE := fopen ( "/tmp/data.txt", "w" );
fprint(FILE,"{");

program p() := {

  gfp := 1000;
  g := geometry();

  mode = 1 : {
    g := geometry(),
    data := { id, g.x, g.y, g.theta } @ data
  }

};

program main() := {

  L := {};
  s := 0;
  t := 0;

  s >= 1 & mode = 0 : {
    mode := 1
  }

  data != {} : {
    fprint ( FILE, "{" <> tostring(t) <> "," <> tostring(data) <> "},\n" ),
    data := {},
    mode := 0,
    s := 0
  }

  true : {
    t := t + dt,
    s := s + dt
  }

  t > 180 : {
    fprint(FILE,"{" <> tostring(t) <> "," <> tostring(data) <> "}}"),
    stop()
  }

};

ecoli ( [], program p() );
